<div class="flex w-full border-2 border-black">
  <div class="border-r-2 border-black p-4 grow prose">
    <%= markdown @readme %>
  </div>
  <div class="flex-1 p-4">
    <%= form_with url: login_path do |form| %>
      <div class="flex flex-col">
        <div>
          <%= form.text_field :username, placeholder: "Username", class: "block w-full" %>
        </div>
        <div class="mt-2">
          <%= form.submit "Login", class: "bg-slate-300 w-full p-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>